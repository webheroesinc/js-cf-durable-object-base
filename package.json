{
  "name": "@whi/cf-do-base",
  "version": "0.2.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/index.js",
  "type": "module",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.js.map"
  ],
  "scripts": {
    "build": "tsc",
    "build:test-fixture": "esbuild tests/fixtures/durable-object-test.ts --bundle --format=esm --outfile=tests/fixtures/dist/durable-object-test.js --external:node:* --external:cloudflare:*",
    "build:tests": "npm run build:test-fixture",
    "prebuild:tests": "npm run build",
    "pretest": "npm run build:tests",
    "prepublishOnly": "npm run build && npm test",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch"
  },
  "author": "Matthew Brisebois",
  "license": "LGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webheroesinc/js-cf-durable-object-base.git"
  },
  "homepage": "https://webheroesinc.github.io/js-cf-durable-object-base",
  "bugs": {
    "url": "https://github.com/webheroesinc/js-cf-durable-object-base/issues"
  },
  "description": "Base class for Cloudflare Durable Objects with built-in routing support",
  "keywords": [
    "cloudflare",
    "cloudflare-workers",
    "durable-objects",
    "routing",
    "base-class"
  ],
  "dependencies": {
    "@whi/cf-routing": "^0.5.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250708.0",
    "@vitest/coverage-v8": "^2.1.8",
    "esbuild": "^0.24.2",
    "itty-router": "^5.0.18",
    "miniflare": "^3.20241218.1",
    "prettier": "^3.6.2",
    "typedoc": "^0.28.14",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8",
    "wrangler": "^4.50.0"
  }
}
